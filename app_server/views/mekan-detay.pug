extends layout

block content
  .row.page-header
    .col-lg-12
      h1=sayfaBaslik
  .row
    .col-xs-12.col-md-12
      .row
        .col-xs-12.col-sm-6
          p.rating
            - for (var i = 0; i < mekanBilgisi.puan; ++i) {
              span.glyphicon.glyphicon-star
            - }
            - for (var i = mekanBilgisi.puan; i < 5; ++i) {
              span.glyphicon.glyphicon-star-empty
            - }
              
          p #{mekanBilgisi.adres}
            .panel.panel-primary
              .panel-heading
                h2.panel-title Açılış Saatleri
              .panel-body
                each saat in mekanBilgisi.saatler
                  p
                    | #{saat.gunler}: 
                    if(saat.kapali)
                      | Kapalı
                    else
                      | #{saat.acilis}-#{saat.kapanis}
            .panel.panel-primary
              .panel-heading
                h2.panel-title Neler Var
              .panel-body
                each imkan in mekanBilgisi.imkanlar
                  span.label.label-warning #{imkan}
                  | &nbsp;
                
                
        .col-xs-12.col-sm-6.location-map
          .panel.panel-primary
            .panel-heading
              h2.panel-title Konum Bilgisi
            .panel-body
              -var enlem=mekanBilgisi.koordinatlar.enlem
              -var boylam=mekanBilgisi.koordinatlar.boylam
              img.img-responsive.img-rounded(src='https://maps.googleapis.com/maps/api/staticmap?center='+enlem+','+boylam+'&zoom=12&size=600x400&markers='+enlem+','+boylam+'&key=AIzaSyCmmKygTpBzHGOZEciJpAdxC9v_tWHagnE')
  .row
    .col-xs-12
      .panel.panel-primary
        .panel-heading
          a.btn.btn-default.pull-right(href='/mekan/yorum/yeni') Yorum Ekle
          h2.panel-title Müşteri Yorumları
        .panel-body.review-container
          each yorum in mekanBilgisi.yorumlar
            .row
              .review
                .well.well-sm.review-header
                  span.rating
                    - for (var i = 0; i < yorum.puan; ++i) {
                      span.glyphicon.glyphicon-star
                    - }
                    - for (var i = yorum.puan; i < 5; ++i) {
                      span.glyphicon.glyphicon-star-empty
                    - }
              
                    span.reviewAuther #{yorum.yorumYapan}
                     | &nbsp;
                    small.reviewTimestamp &nbsp; #{yorum.tarih}
              .col-xs-12
                p #{yorum.yorumMetini}
          
